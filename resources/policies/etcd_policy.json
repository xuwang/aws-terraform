{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::AWS-ACCOUNT-CLUSTER-NAME-cloudinit",
        "arn:aws:s3:::AWS-ACCOUNT-CLUSTER-NAME-cloudinit/*",
        "arn:aws:s3:::AWS-ACCOUNT-CLUSTER-NAME-config",
        "arn:aws:s3:::AWS-ACCOUNT-CLUSTER-NAME-config/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "autoscaling:Describe*"
      ],
      "Resource": [
        "*"
      ]
    }
  ]
}
